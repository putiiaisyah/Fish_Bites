<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".penjelasan_artikel">

        <!-- Tombol kembali -->

        <!-- Judul Artikel -->
        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="50dp"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_back" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Artikel"
            android:textColor="@color/cadedblue"
            android:fontFamily="@font/readex_bold"
            android:textSize="22sp"
            app:layout_constraintStart_toEndOf="@id/imageButton4"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="50dp" />

        <!-- Gambar Artikel -->

        <!-- Sub Judul Artikel -->
        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="266dp"
            android:layout_height="147dp"
            android:layout_marginTop="35dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView9"
            app:srcCompat="@drawable/cover_artikel" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Inovasi budidaya ikan terbaru membantu petani meningkatkan hasil panen!"
            android:textAlignment="center"
            android:fontFamily="@font/readex_bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/imageView12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Background Deskripsi Artikel -->

        <!-- Deskripsi Artikel -->

        <!-- Button Oke -->
        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="354dp"
            android:layout_height="471dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintBottom_toTopOf="@id/button3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView16"
            app:layout_constraintVertical_bias="0.231"
            app:srcCompat="@drawable/bg_artikel_penjelasan" />

        <TextView
            android:id="@+id/editTextDeskripsi"
            android:layout_width="321dp"
            android:layout_height="461dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="Inovasi dalam budidaya ikan, seperti sistem bioflok dan sensor IoT, telah membantu petani meningkatkan hasil panen dengan lebih efisien. Sistem bioflok menggunakan mikroorganisme untuk menjaga kualitas air, mengurangi frekuensi penggantian air, dan menekan biaya pakan tambahan. Di sisi lain, sensor IoT memungkinkan petani memantau kondisi kolam, termasuk suhu dan kadar oksigen, secara real-time. Hal ini memungkinkan tindakan cepat saat ada perubahan yang berpotensi mengganggu pertumbuhan ikan. Selain itu, metode aquaponik, yang menggabungkan budidaya ikan dan tanaman hidroponik, semakin banyak diterapkan. Limbah ikan dimanfaatkan sebagai nutrisi bagi tanaman, menciptakan sistem yang efisien dan ramah lingkungan. Dengan penerapan teknologi ini, petani dapat meningkatkan produktivitas dan mengurangi risiko kerugian, sekaligus menjalankan usaha budidaya yang lebih berkelanjutan."
            android:textAlignment="center"
            android:fontFamily="@font/readex_bold"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/imageView11"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/imageView11"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="44dp"
            android:text="oke"
            android:backgroundTint="@color/yellow"
            android:fontFamily="@font/readex_bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>